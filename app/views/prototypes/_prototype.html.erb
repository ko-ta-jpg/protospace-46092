<div class="card">
  
  <% if prototype.image.attached? %>
    <%= link_to prototype_path(prototype) do %>
      <%= image_tag prototype.image, class: "card__img" %>
    <% end %>
  <% end %>

  
  <h2 class="card__title">
    <%= link_to prototype.title, prototype_path(prototype), class: "card__title-link" %>
  </h2>

  <p class="card__catch-copy"><%= prototype.catch_copy %></p>

  <p class="prototype__user">
  by <%= link_to prototype.user.name, user_path(prototype.user), class: :prototype__user %>
  </p>
  
  <p class="card__user">
    投稿者：
    <%= link_to prototype.user.name, prototype_path(prototype), class: "card__user-link" %>
  </p>
</div>