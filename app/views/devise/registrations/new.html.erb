<div class="signup-page">
  <h2 class="signup-title">ユーザー新規登録</h2>

  <%= form_with model: resource, url: user_registration_path, id: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス", class: "signup-label" %><br />
      <%= f.email_field :email, id: "user_email", class: "input-default short", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード（6文字以上）", class: "signup-label" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input-default short" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード再入力", class: "signup-label" %><br />
      <%= f.password_field :password_confirmation, id: "user_password_confirmation", autocomplete: "new-password", class: "input-default short" %>
    </div>

    <div class="field">
      <%= f.label :name, "ユーザー名", class: "signup-label" %><br />
      <%= f.text_field :name, id: "user_name", class: "input-default short" %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール", class: "signup-label" %><br />
      <%= f.text_area :profile, id: "user_profile", class: "input-default long" %>
    </div>

    <div class="field">
      <%= f.label :occupation, "所属", class: "signup-label" %><br />
      <%= f.text_field :occupation, id: "user_occupation", class: "input-default long" %>
    </div>

    <div class="field">
      <%= f.label :position, "役職", class: "signup-label" %><br />
      <%= f.text_field :position, id: "user_position", class: "input-default long" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "signup-btn" %>
    </div>
  <% end %>
</div>